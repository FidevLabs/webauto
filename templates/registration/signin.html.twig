{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="vh-100"style="padding-top: 3%">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100" style="padding-top: 5%">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="{{ asset('picto/webauto_logo.png') }}"
          class="img-fluid wall-home" alt="Sample image">

      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1 ">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Inscription</button>

         <legend>
            <small>Si vous avez déjà un compte <a href="{{ path('app_login')}}" >connectez-vous ici</a></small>
        </legend>
    {{ form_end(registrationForm) }}

    </div>
    </div>
  </div>
  </section>
{% endblock %}
